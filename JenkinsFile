pipeline {
    agent any

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'main', url: 'https://github.com/yourname/blue-green-repo.git'
            }
        }

        stage('Deploy Blue') {
            steps {
                bat 'docker stop blue || true'
                bat 'docker rm blue || true'
                bat 'docker run -d --name blue -p 8081:3000 yourdockerhubusername/node-blue:v1'
            }
        }

        stage('Deploy Green') {
            steps {
                bat 'docker stop green || true'
                bat 'docker rm green || true'
                bat 'docker run -d --name green -p 8082:3000 yourdockerhubusername/node-green:v2'
            }
        }

        stage('Health Check') {
            steps {
                script {
                    def green_status = bat(script: "curl -s http://localhost:8082", returnStdout: true)
                    if (!green_status.contains('Green')) {
                        error("Green deployment failed")
                    }
                }
            }
        }

        stage('Switch Traffic') {
            steps {
                bat 'docker stop blue'
                echo "Traffic moved to GREEN deployment"
            }
        }
    }
}

